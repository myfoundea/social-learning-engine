<div class="pt-1 flex flex-wrap items-center">
  <% if author_of(post)  %>
    <%= link_to edit_post_path(post), class:"no-underline mr-2" do %>
      <%= render_svg 'icons/edit', title: "Edit", styles: "fill-current text-gray-500 icon-sm hover:text-gray-700" %>
    <% end %>

    <%= link_to post, method: :delete, class:"no-underline", data: { confirm: 'Are you sure?' } do %>
      <%= render_svg 'icons/delete', title: "Delete", styles: "fill-current text-gray-500 icon-sm hover:text-gray-700" %>
    <% end %>
  <% end %>
</div>